{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":prConcurrentLimit10",
    ":prHourlyLimitNone",
    ":timezone(Asia/Tokyo)",
    "customManagers:biomeVersions",
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions",
      ],
      "groupName": "GitHub Actions dependencies",
      "automerge": true
    },
    {
      "matchFileNames": [
        "ts/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
      ],
      "automerge": true
    }
  ],
}
